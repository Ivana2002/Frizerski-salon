<UserControl x:Class="IvanaDrugi.Views.RacuniSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Pretraga računa po datumu" FontSize="24" FontWeight="Bold" Margin="0,0,0,15" Foreground="Black"/>

            <TextBlock Text="Datum:" Margin="0,0,0,5" Foreground="Black"/>
            <DatePicker x:Name="dpDatum" Width="150" Foreground="Black" Background="White" BorderBrush="#FF4081"/>
            <Button Content="Pretraži" Click="BtnPretrazi_Click"
                    Height="40" Margin="0,20,0,0"
                    Padding="15,10"
                    Background="#FF4081"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"/>

            <DataGrid x:Name="DataGridRacuni"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Foreground="Black"
                      Background="White"
                      RowBackground="White"
                      BorderBrush="#FF4081"
                      Margin="0,20,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Broj računa" Binding="{Binding BrojRacuna}" Width="120"/>
                    <DataGridTextColumn Header="Datum" Binding="{Binding DatumIzdavanja, StringFormat=dd.MM.yyyy}" Width="100"/>
                    <DataGridTextColumn Header="Klijent" Binding="{Binding Klijent.PunoIme}" Width="150"/>
                    <DataGridTextColumn Header="Ukupno" Binding="{Binding UkupnaCijena, StringFormat={}{0:N2} KM}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>