<Window x:Class="IvanaDrugi.Views.DodajKorisnikaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj novog korisnika" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}"
        FontFamily="{DynamicResource MainFont}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Ime:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBox x:Name="txtIme" Height="30" Margin="0,0,0,15"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Background="{DynamicResource BackgroundBrush}"
                     BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Prezime:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBox x:Name="txtPrezime" Height="30" Margin="0,0,0,15"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Background="{DynamicResource BackgroundBrush}"
                     BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Kontakt (email/telefon):" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBox x:Name="txtKontakt" Height="30" Margin="0,0,0,15"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Background="{DynamicResource BackgroundBrush}"
                     BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Korisničko ime:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBox x:Name="txtKorisnickoIme" Height="30" Margin="0,0,0,15"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Background="{DynamicResource BackgroundBrush}"
                     BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Lozinka:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <PasswordBox x:Name="txtLozinka" Height="30" Margin="0,0,0,15"
                         Foreground="{DynamicResource ForegroundBrush}"
                         Background="{DynamicResource BackgroundBrush}"
                         BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Potvrdite lozinku:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <PasswordBox x:Name="txtPotvrdaLozinke" Height="30" Margin="0,0,0,15"
                         Foreground="{DynamicResource ForegroundBrush}"
                         Background="{DynamicResource BackgroundBrush}"
                         BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Uloga:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <ComboBox x:Name="cmbUloga" Height="30" Margin="0,0,0,15"
                      Foreground="{DynamicResource ForegroundBrush}"
                      Background="{DynamicResource BackgroundBrush}"
                      BorderBrush="{DynamicResource AccentBrush}">
                <ComboBoxItem Content="radnik"/>
                <ComboBoxItem Content="admin"/>
            </ComboBox>

            <TextBlock Text="Preferirana tema:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <ComboBox x:Name="cmbTema" Height="30" Margin="0,0,0,15"
                      Foreground="{DynamicResource ForegroundBrush}"
                      Background="{DynamicResource BackgroundBrush}"
                      BorderBrush="{DynamicResource AccentBrush}">
                <ComboBoxItem Content="Svijetla"/>
                <ComboBoxItem Content="Tamna"/>
                <ComboBoxItem Content="Roze"/>
            </ComboBox>

            <TextBlock Text="Jezik:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <ComboBox x:Name="cmbJezik" Height="30" Margin="0,0,0,20"
                      Foreground="{DynamicResource ForegroundBrush}"
                      Background="{DynamicResource BackgroundBrush}"
                      BorderBrush="{DynamicResource AccentBrush}">
                <ComboBoxItem Content="sr"/>
                <ComboBoxItem Content="en"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Odustani" Click="BtnOdustani_Click" Margin="0,0,10,0" Width="100"
                        Background="{DynamicResource AccentBrush}" Foreground="White"/>
                <Button Content="Sačuvaj" Click="BtnSacuvaj_Click" Background="{DynamicResource AccentBrush}" Foreground="White" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>