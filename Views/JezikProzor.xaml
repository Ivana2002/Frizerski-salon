<Window x:Class="IvanaDrugi.Views.JezikProzor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Izaberi jezik" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Izaberi jezik:" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource ForegroundBrush}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content=" Srpski"
                        Click="BtnSrpski_Click"
                        Padding="15,10"
                        Margin="0,0,10,0"
                        Background="#FF80AB"
                        Foreground="Black"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Width="100"/>

                <Button Content=" English"
                        Click="BtnEnglish_Click"
                        Padding="15,10"
                        Background="#F44366"
                        Foreground="Black"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Width="100"/>
            </StackPanel>

            <Button Content="Odustani"
                    Click="BtnOdustani_Click"
                    Margin="0,20,0,0"
                    Padding="15,10"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>