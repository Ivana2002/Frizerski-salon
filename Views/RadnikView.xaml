<Window x:Class="IvanaDrugi.Views.RadnikView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:IvanaDrugi.Views"
        Title="Frizerski Salon - Radnik" Height="600" Width="900">
    <Grid>
        <DockPanel>
            
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Rezervacije">
                    <MenuItem Header="Kreiraj rezervaciju" Click="BtnKreirajRezervaciju_Click"/>
                    <MenuItem Header="Pregled rezervacija" Click="BtnPregledRezervacija_Click"/>
                </MenuItem>

                <MenuItem Header="Računi">
                    <MenuItem Header="Kreiraj račun" Click="BtnKreirajRacun_Click"/>
                    <MenuItem Header="Pregled računa" Click="BtnPregledRacuna_Click"/>
                    <MenuItem Header="Pretraga računa po datumu" Click="BtnPretragaRacuna_Click"/>
                </MenuItem>
            </Menu>

           
            <ContentControl x:Name="MainContent" Margin="20"/>
        </DockPanel>
    </Grid>
</Window>