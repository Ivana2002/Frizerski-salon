<Window x:Class="IvanaDrugi.Views.TemaProzor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Izaberi temu" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Izaberi temu:" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource ForegroundBrush}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content=" Svijetla"
                        Click="BtnSvijetla_Click"
                        Padding="15,10"
                        Margin="0,0,10,0"
                        Background="#BBDEFB"
                        Foreground="Black"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Width="100"/>

                <Button Content=" Tamna"
                        Click="BtnTamna_Click"
                        Padding="15,10"
                        Margin="0,0,10,0"
                        Background="#8C8C8C"
                        Foreground="Black"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Width="100"/>

                <Button Content=" Roze"
                        Click="BtnRoze_Click"
                        Padding="15,10"
                        Background="#F48FB1"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Width="100"/>
            </StackPanel>

            <Button Content="Odustani"
                    Click="BtnOdustani_Click"
                    Margin="0,20,0,0"
                    Padding="15,10"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>