<UserControl x:Class="IvanaDrugi.Views.KreirajRezervacijuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Kreiraj novu rezervaciju" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,15"
                       Foreground="{DynamicResource ForegroundBrush}"/>

            <TextBlock Text="Ime klijenta:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBox x:Name="txtImeKlijenta" Height="30" Margin="0,0,0,15"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Background="{DynamicResource BackgroundBrush}"
                     BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Telefon:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <TextBox x:Name="txtTelefon" Height="30" Margin="0,0,0,15"
                     Foreground="{DynamicResource ForegroundBrush}"
                     Background="{DynamicResource BackgroundBrush}"
                     BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Datum i vreme:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <DatePicker x:Name="dpDatum" Margin="0,0,0,15"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource AccentBrush}"/>
            <ComboBox x:Name="cmbSat" Margin="0,0,0,15" Height="30"
                      Foreground="{DynamicResource ForegroundBrush}"
                      Background="{DynamicResource BackgroundBrush}"
                      BorderBrush="{DynamicResource AccentBrush}"/>

            <TextBlock Text="Usluge:" Margin="0,0,0,5" Foreground="{DynamicResource ForegroundBrush}"/>
            <ComboBox x:Name="cmbUsluge" Height="30" Margin="0,0,0,15"
                      Foreground="{DynamicResource ForegroundBrush}"
                      Background="{DynamicResource BackgroundBrush}"
                      BorderBrush="{DynamicResource AccentBrush}"/>

            <Button Content="Kreiraj rezervaciju" Click="BtnKreiraj_Click"
                    Height="40" Margin="0,20,0,0"
                    Padding="15,10"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>