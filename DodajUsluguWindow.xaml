<Window x:Class="IvanaDrugi.Views.DodajUsluguWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj novu uslugu" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Šifra:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtSifra" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Naziv:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtNaziv" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Opis:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtOpis" Height="60" TextWrapping="Wrap" Margin="0,0,0,15"/>

            <TextBlock Text="Cijena (KM):" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCena" Height="30" Margin="0,0,0,15"/>

            <TextBlock Text="Trajanje (min):" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTrajanje" Height="30" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Odustani" Click="BtnOdustani_Click" Margin="0,0,10,0" Width="100"/>
                <Button Content="Sačuvaj" Click="BtnSacuvaj_Click" Background="#FF4081" Foreground="White" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>